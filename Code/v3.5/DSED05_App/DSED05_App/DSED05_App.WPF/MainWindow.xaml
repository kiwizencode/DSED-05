<Window x:Class="DSED05_App.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSED05_App.WPF"
        mc:Ignorable="d"
        WindowStyle="None" WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="600" Width="800">
    <!--ResizeMode="NoResize"-->
    <Viewbox Stretch="Fill">
        <Canvas x:Name="RaceCourseCanvas" Width="300" Height="250">
            <!-- Background for Racer -->
            <Image Canvas.Left="0" Canvas.Top="0"   
               Source="Image/background.png" Height="132" Width="300" Stretch="Fill"/>
            <!-- Background for Punter -->
            <Image Canvas.Left="0" Canvas.Top="131"   
               Source="Image/grandstand.png" Height="120" Width="300" Stretch="Fill"/>
        </Canvas>
    </Viewbox>

</Window>
